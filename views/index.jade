extends layout

block content

  section.cam
    .container
      h1 Bowler Cam
      div.cam-view
        img#cam(src='/images/cam.jpeg', width='544', height='288')
        img.bowler(src='/images/bowler.png', width='300', height='203', style='display:none;')

      p.attribution Brought to you by 
        a.logo-clock(href='http://clock.co.uk') Clock.

  section.info
    .container

      .row
        .col-left
          h2 What's with the flashing LEDs?
          p Two flashes followed by 60 seconds of load average
          p Three flashes followed by 60 seconds of twitter followers in binary 
           a(href='http://twitter.com/nodebowler') @nodebowler
          p Chaser = new twitter follower

        .col-right
          h2 What's in the Bowler?
          ul
            li
              a(href='http://www.maplin.co.uk/5mm-rounded-panel-indicator-leds-and-bezels-35952') 6 x Panel Indicator LEDs
            li
              a(href='http://raspberrypi.rsdelivers.com/default.aspx?cl=1') 1 x Raspberry Pi Type B Single Board Computer
            li
              a(href='http://www.raspbian.org/') Raspbian “wheezy”
            li
              a(href='http://nodejs.org/') node.js 0.6.19
            li
              a(href='http://www.amazon.co.uk/dp/B0013KD7U6/ref=pe_217191_31005151_dp_1') TeckNet iEP390 Power Station 11000mAh External Battery

      .row
        .col-middle
          h1 Bowler Stats
          dl
            div
              dd=info.loadAvg[0].toPrecision(3)
              dt Load Average
            div
              dd=Math.round(info.uptime / 60) + 'mins'
              dt Uptime


      div.social
        .content
          h4 Follow the bowler
          p Find out what the bowler hat is up to and see the best snaps by following 
            a(href='http://twitter.com/nodebowler') @nodebowler

        nav
          ul
            li.nav-twitter: a(href='http://twitter.com/nodebowler') @nodebowler
            li.nav-github: a(href='https://github.com/serby/bowler') GitHub